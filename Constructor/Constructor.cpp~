#include<iostream>
using namespace std;
class Rectangle
{
        public :
        float length;
        float width;
        Rectangle()
        {
                length=2;
                width=3;
        }
        
        float getArea()
        {
        return length*width;
        }
        float getPerimeter()
        {
        return 2*(length+width);
        }
        
};

int main()
{
        Rectangle rect;
        cout<<"Area = "<<rect.getArea()<<"\n";
        cout<<"Perimeter = "<<rect.getPerimeter()<<"\n";
        cout<<"Length = "<<rect.length<<", Wdth = "<<rect.width<<"\n";
        return 0;
}
